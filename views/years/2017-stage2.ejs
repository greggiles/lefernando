<% include ../partials/header %>
<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 col-sm-offset-0 col-xs-12 col-xs-offset-0">
                    <h1 class="brand-heading">LeFernando 2017</h1>
                    <h2>Stage 2</h2>
                    <div class="col-md-2  col-md-offset-3 col-xs-3 col-xs-offset-2">
