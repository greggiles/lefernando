<!doctype html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
<% include partials/header %>

<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <% if (typeof user == 'undefined') { %>
                        <p>Login with:</p>
                        <p><a href="/auth/strava"><img src="./btn_strava_connectwith_orange.png"></a></p>
                    <% } else { %>

                        <h1 class="brand-heading">LeFernando</h1>
                        <% if (typeof ride != null && ride.totalTime != '') { %>
                            <p class="intro-text">A <%= ride.totalTime %> JETT?. Nice Job,
                                <br><%= user.strava.name %></p>
                            <a href="#about" class="btn btn-circle page-scroll">
                                <i class="fa fa-angle-double-down animated"></i></a>
                        <% } else { %>
                                <p class="intro-text">Why come you have no JETT?</br>... at least you have the best week of spring to look forward to.
                            <br>too bad you can't talk about it, huh, <%= user.strava.name %>?</p>
                            <a href="#about" class="btn btn-circle page-scroll">
                                <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    <% } } %>
                </div>
            </div>
        </div>
    </div>
</header>

<% if (typeof user != 'undefined') { %>

<!-- About Section -->
<section id="about" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>About LeFernando</h2>
            <p>A fun week of Riding.</p>
            <p>Friends. New Friends. Bikes. Beers.</p>
            <p>Powered by Strava</p>
        </div>
    </div>
</section>

<% } %>


<!-- About Section -->
<% if (typeof user != 'undefined') { %>
    <% if ( user.events.length > 0 ) { %>
        <section id="about" class="container content-section text-center">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Where we Ride</h2>
                    <iframe src="https://www.google.com/maps/d/embed?mid=1cazKA22C0H2JpnPjlavtKZKZKQo" width="100%" height="480"></iframe>
                </div>
            </div>
        </section>
    <% } %>
<% } %>

<footer>
    <% include partials/footer %>
</footer>
</body>
</html>
