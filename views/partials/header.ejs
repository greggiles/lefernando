<!-- views/partials/header.ejs -->

<!-- Navigation -->
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="/">
                <i class="fa fa-bicycle"></i> <span class="light">LeFernando</span>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <% if (typeof user != 'undefined') { %>
                <% if ( user.role == 'admin' ) { %>
                <li><a class="page-scroll" href="/admin">Admin</a></li>
                <% } %>
                <% if ( user.events.length > 0 ) { %>
                    <li><a class="page-scroll" href="/signup">Signup</a></li>
                <% } %>
<!--                <li><a class="page-scroll" href="/profile">Profile</a></li>
 -->
                <% user.events.forEach(function(event) { %>
                <li><a class="page-scroll" href="/<%= event.name %>"><%= event.name %></a></li>
                <% }); %>
                <li><a class="page-scroll" href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->


</nav>

